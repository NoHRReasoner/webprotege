<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.library.text">
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .resetButton {
        flex-grow: 0;
        flex-shrink: 0;
        margin-left: 7px;
        }
        .uploadContainer {
        padding-top: 10px;
        padding-bottom: 10px;
        }
        .langTagPanel {
        display: flex;
        flex-direction: row;
        }
        .warningField {
        margin-top: 20px;
        }
        }
    </ui:style>
    <g:HTMLPanel ui:field="fileUploadArea" addStyleNames="{wp.style.formGroup}">
        <g:Label text="{msg.uploadNoHRDBMapping}" ui:field="dbMappingLabel" addStyleNames="{wp.style.formLabel}"/>
        <g:HTMLPanel addStyleNames="{style.uploadContainer}">
            <g:FormPanel ui:field="formPanel">
                <g:FileUpload ui:field="fileUpload"/>
            </g:FormPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>

    <!--<g:HTMLPanel>
        <div class="{wp.style.formGroup}">
            <g:Label text="{msg.uploadNoHRDBMapping}" ui:field="dbMappingLabel" addStyleNames="{wp.style.formLabel}"/>
            <g:FormPanel ui:field="formPanel">
                <g:FileUpload ui:field="fileUpload"/>
            </g:FormPanel>
        </div>
    </g:HTMLPanel>-->
</ui:UiBinder>